<?xml version="1.0" ?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">intrastat.invoice.form.arrival</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="intrastat_product.view_move_form" />
        <field name="arch" type="xml">

            <field name="src_dest_country_id" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}</attribute>
            </field>

            <field name="src_dest_country_id" position="after">
                <field
                    name="src_dest_country_id"
                    string="Origin Country"
                    attrs="{'invisible': [('move_type', 'not in', ['in_invoice', 'in_refund'])]}"
                />
            </field>

        </field>
    </record>

</odoo>
